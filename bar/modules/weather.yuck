(defpoll weather :interval "600s" :initial "{\"temp\":\"--\",\"condition\":\"\",\"icon\":\"\"}"
  "~/.config/eww/bar/scripts/weather.sh")

(defwidget weather []
  (eventbox
    :onclick "~/.config/eww/bar/scripts/open_monitor.sh weather"
    :cursor "pointer"
    (box :class "module weather"
      (label :text "${weather.icon} ${weather.temp}"))))
