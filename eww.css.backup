/* Calendar fixes */
.cal-header-box {
  padding: 12px;
  background-color: #313244;
  border-radius: 8px;
  margin-bottom: 12px;
}

.tasks-header-box {
  padding-bottom: 6px;
  border-bottom: 1px solid #313244;
}



.cal-widget {
  padding: 8px;
}

.cal-widget calendar:selected {
  background-color: #89b4fa;
  color: #1e1e2e;
  font-weight: bold;
}

.cal-widget calendar.highlight {
  background-color: #89b4fa;
  color: #1e1e2e;
}


calendar.header {
  background-color: #313244;
  color: #bac2de;
}

calendar:indeterminate {
  background-color: transparent;
  color: #6c7086;
}

.tasks-add-btn {
  background-color: #89b4fa;
  color: #1e1e2e;
  padding: 1px 4px;
  border-radius: 3px;
  font-size: 13px;
  font-weight: bold;
  min-width: 16px;
  min-height: 16px;
}

.tasks-add-btn:hover {
  background-color: #74c7ec;
